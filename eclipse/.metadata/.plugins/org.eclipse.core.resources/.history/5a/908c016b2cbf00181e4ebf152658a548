//package org.apache.logging.log4j;
package net.minecraft.client.util;

import org.apache.logging.log4j.*;
import org.apache.logging.log4j.LogManager;

public interface Logger extends org.apache.logging.log4j.Logger {
	
	public static final org.apache.logging.log4j.Logger logger = LogManager.getLogger();
	
	public default void debugLog(Object sender, Object message) {
		logger.debug("[" + sender.getClass().getSimpleName() + "(" + sender.getClass().getName() + ")" + "] : " + message.toString());
	}
	
	public static default Logger getLogger() {
		return new net.minecraft.client.util.Logger();
	}
}
